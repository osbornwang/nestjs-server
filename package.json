{
  "name": "flash-nest-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prod": "cross-env NODE_ENV=production pm2 start dist/main.js --name 'flash-nest-api'",
    "uat": "cross-env NODE_ENV=uat pm2 start dist/main.js --name 'flash-nest-api'",
    "stop": "pm2 delete flash-nest-api",
    "migrate": "./node_modules/db-migrate/bin/db-migrate up",
    "build": "npm run lint && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "hrm": "webpack --config webpack.config.js",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "start:uat": "cross-env NODE_ENV=uat node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "commit": "git-cz",
    "proto:init": "git submodule init",
    "proto:deinit": "git submodule deinit --all",
    "proto:update": "git submodule update",
    "addfile": "node faster-nest-cli.js"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.1",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.4.0",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "grpc": "^1.21.1",
    "grpc-promise": "^1.4.0",
    "hbs": "^4.0.4",
    "helmet": "^3.18.0",
    "jest": "^24.8.0",
    "lodash": "^4.17.11",
    "mysql": "^2.17.1",
    "nest-schedule": "^0.6.2",
    "nestjs-redis": "^1.2.2",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "qiniu": "^7.2.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "styliner": "^1.0.4",
    "swagger-ui-express": "^4.0.7",
    "ts-jest": "^24.0.2",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "commitizen": "^3.1.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "db-migrate": "^0.11.6",
    "db-migrate-mysql": "^1.1.10",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "log4js": "^4.3.2",
    "mockjs": "^1.0.1-beta3",
    "moment": "^2.24.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "serve-static": "^1.14.1",
    "stacktrace-js": "^2.0.0",
    "supertest": "^3.4.1",
    "ts-loader": "^6.0.4",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2",
    "youch": "^2.0.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/config/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --config ./.prettierrc --write",
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add"
    ],
    "test/**/*.ts": [
      "prettier --config ./.prettierrc --write",
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
